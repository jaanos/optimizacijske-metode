\tikzstyle{zacetek pretoka}=[black, near start]
\tikzstyle{konec pretoka}=[black, near end]

\tikzstyle{drevo}=[very thick, red]
\tikzstyle{izstopi}=[dashed]
\tikzstyle{vstopi}=[blue]
\tikzstyle{kandidat}=[green]
